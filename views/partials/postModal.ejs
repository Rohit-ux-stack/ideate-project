<div id="postModal" class="fixed inset-0 bg-black/80 hidden items-center justify-center z-[100] p-4 backdrop-blur-sm">
    <div class="bg-[#11161D] border border-slate-800 w-full max-w-2xl rounded-3xl p-8 relative shadow-2xl">
        <button onclick="document.getElementById('postModal').classList.replace('flex', 'hidden')" class="absolute top-6 right-6 text-slate-500 hover:text-white text-2xl">&times;</button>
        
        <h2 class="text-2xl font-bold mb-6 text-blue-500">Share Your Innovation</h2>
        
        <form action="/post-idea" method="POST" enctype="multipart/form-data" class="space-y-6">
            <input type="text" name="title" placeholder="Project Title" class="w-full bg-[#161B22] border border-slate-800 p-4 rounded-xl focus:border-blue-500 outline-none" required>
            
            <textarea name="description" placeholder="Describe your idea..." class="w-full bg-[#161B22] border border-slate-800 p-4 rounded-xl h-32 focus:border-blue-500 outline-none resize-none" required></textarea>
            
            <div class="grid grid-cols-2 gap-6">
                <select name="category" class="w-full bg-[#161B22] border border-slate-800 p-4 rounded-xl focus:border-blue-500 outline-none">
                    <option value="Tech">Tech Upgrade</option>
                    <option value="Startup">Startup Idea</option>
                    <option value="Social">Social Impact</option>
                </select>
                <input type="file" name="ideaImages" multiple accept="image/*" class="w-full bg-[#161B22] border border-slate-800 p-4 rounded-xl text-sm text-slate-400 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:bg-blue-600 file:text-white hover:file:bg-blue-500">
            </div>
            
            <button type="submit" class="w-full bg-blue-600 py-4 rounded-xl font-bold hover:bg-blue-500 transition shadow-lg">Launch Idea</button>
        </form>
    </div>
</div>