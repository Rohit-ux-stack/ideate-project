<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="bg-[#0F172A] text-slate-200 min-h-screen flex items-center justify-center p-4 font-sans">
    
    <div class="w-full max-w-md bg-slate-900 border border-slate-800 p-6 md:p-8 rounded-3xl shadow-2xl relative text-center">
        
        <a href="/signup" class="absolute top-4 left-4 text-slate-600 hover:text-white transition p-2">
            <i class="ri-arrow-left-line text-xl"></i>
        </a>

        <div class="w-16 h-16 md:w-20 md:h-20 bg-blue-500/10 text-blue-500 rounded-full flex items-center justify-center text-3xl md:text-4xl mx-auto mb-6 border border-blue-500/20">
            <i class="ri-shield-check-line"></i>
        </div>

        <h1 class="text-xl md:text-2xl font-bold text-white mb-2">Verify Account</h1>
        <p class="text-slate-400 text-sm md:text-base mb-6">
            Enter the 4-digit code sent to <br> 
            <span class="text-white font-bold break-all"><%= typeof email !== 'undefined' ? email : 'your email' %></span>
        </p>

        <% if (locals.error) { %>
            <div class="bg-red-500/10 border border-red-500/20 text-red-400 p-3 rounded-xl mb-6 text-sm font-bold flex items-center justify-center gap-2 animate-pulse">
                <i class="ri-error-warning-line"></i> <%= error %>
            </div>
        <% } %>

        <form action="/verify-otp" method="POST" class="space-y-6">
            
            <input type="hidden" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>">

            <div>
                <input type="text" 
                       name="otp" 
                       id="otpInput"
                       maxlength="4" 
                       placeholder="0000" 
                       inputmode="numeric" 
                       pattern="[0-9]*" 
                       autocomplete="one-time-code"
                       class="w-full bg-slate-950 border border-slate-800 rounded-2xl px-4 py-4 text-center text-white text-3xl md:text-4xl tracking-[1rem] md:tracking-[1.5rem] focus:border-blue-500 outline-none transition font-mono placeholder-slate-800 shadow-inner focus:shadow-blue-500/10">
            </div>

            <button type="submit" id="verifyBtn" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 md:py-4 rounded-xl transition shadow-lg shadow-blue-900/20 active:scale-[0.98] flex items-center justify-center gap-2">
                <i id="btnLoader" class="ri-loader-4-line animate-spin text-xl hidden"></i>
                <span id="btnText">Verify & Continue</span>
            </button>
        </form>

        <div class="mt-8 pt-6 border-t border-slate-800/50">
            <p class="text-xs text-slate-500 mb-2">Didn't receive the code?</p>
            <form action="/resend-otp" method="POST">
                <input type="hidden" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>">
                <button type="submit" class="text-sm font-bold text-blue-400 hover:text-blue-300 hover:underline transition">
                    Resend Code
                </button>
            </form>
        </div>
    </div>

    <script>
        const otpInput = document.getElementById('otpInput');
        
        // 1. Auto-focus on load
        window.addEventListener('load', () => {
            if(otpInput) setTimeout(() => otpInput.focus(), 100);
        });

        // 2. Enforce Numeric Input Only
        if(otpInput) {
            otpInput.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        }

        // 3. Loading State on Submit
        document.querySelector('form[action="/verify-otp"]').addEventListener('submit', function() {
            const btn = document.getElementById('verifyBtn');
            const btnText = document.getElementById('btnText');
            const loader = document.getElementById('btnLoader');
            
            btn.disabled = true;
            btn.classList.add('opacity-75', 'cursor-not-allowed');
            btnText.innerText = "Verifying...";
            loader.classList.remove('hidden');
        });
    </script>

</body>
</html>