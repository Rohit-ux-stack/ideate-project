<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="bg-[#0F172A] text-slate-200 min-h-screen flex font-sans">
    <%- include('../partials/sidebar') %>

    <main class="ml-64 flex-1 p-8">
        <div class="max-w-3xl mx-auto">
            
            <div class="flex items-center gap-4 mb-8">
                <a href="/user/<%= targetUser._id %>" class="bg-slate-800 p-2 rounded-full hover:bg-slate-700 transition text-slate-400 border border-slate-700">
                    <i class="ri-arrow-left-line text-xl"></i>
                </a>
                <div>
                    <h1 class="text-2xl font-bold text-white flex items-center gap-2">
                        <%= type.charAt(0).toUpperCase() + type.slice(1) %>
                        <span class="text-sm font-normal text-slate-500 bg-slate-900 px-2 py-0.5 rounded-full border border-slate-800"><%= list.length %></span>
                    </h1>
                    <p class="text-slate-500 text-sm">@<%= targetUser.displayName %></p>
                </div>
            </div>

            <div class="space-y-4">
                <% if (list.length === 0) { %>
                    <div class="text-center py-16 bg-slate-900/30 rounded-3xl border border-slate-800 border-dashed">
                        <i class="ri-user-unfollow-line text-4xl mb-3 block text-slate-600"></i>
                        <span class="text-slate-500">No <%= type %> found.</span>
                    </div>
                <% } else { %>
                    <% list.forEach(u => { %>
                        <div class="bg-slate-900/50 border border-slate-800 p-4 rounded-2xl flex items-center justify-between group hover:border-slate-700 transition relative overflow-hidden" id="user-card-<%= u._id %>">
                            
                            <a href="/user/<%= u._id %>" class="flex items-center gap-4 flex-1 z-10">
                                <div class="w-12 h-12 rounded-full bg-slate-800 flex items-center justify-center overflow-hidden border border-slate-700 shrink-0">
                                    <% if (u.image) { %>
                                        <img src="<%= u.image %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <span class="font-bold text-lg text-white"><%= u.displayName.charAt(0) %></span>
                                    <% } %>
                                </div>
                                <div>
                                    <h3 class="font-bold text-white group-hover:text-blue-400 transition text-base"><%= u.displayName %></h3>
                                    <p class="text-xs text-slate-500 line-clamp-1"><%= u.bio || "Available for collaboration." %></p>
                                </div>
                            </a>

                            <div class="flex items-center gap-3 z-10">
                                
                                <% if (user && user._id.toString() === targetUser._id.toString() && type === 'followers') { %>
                                    <button onclick="openRemoveModal('<%= u._id %>', '<%= u.displayName %>')" class="px-3 py-1.5 text-xs font-bold text-red-400 bg-red-500/10 hover:bg-red-500 hover:text-white rounded-lg transition border border-red-500/20 flex items-center gap-1" title="Remove this follower">
                                        <i class="ri-user-unfollow-line"></i> Remove
                                    </button>
                                <% } %>

                                <% if (user && user._id.toString() !== u._id.toString()) { %>
                                    <button onclick="toggleFollowInList(this, '<%= u._id %>')" class="<%= user.following.includes(u._id) ? 'bg-slate-800 text-slate-300 border border-slate-700' : 'bg-blue-600 text-white border border-blue-600' %> px-4 py-1.5 rounded-lg text-xs font-bold transition shadow-lg">
                                        <%= user.following.includes(u._id) ? 'Unfollow' : 'Follow' %>
                                    </button>
                                <% } %>

                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </main>

    <div id="removeModal" class="fixed inset-0 z-50 hidden bg-slate-900/80 backdrop-blur-md flex items-center justify-center p-4">
        <div class="bg-[#0F172A] border border-slate-700 rounded-3xl p-6 max-w-sm w-full shadow-2xl transform scale-100 transition-all">
            
            <div class="text-center mb-6">
                <div class="w-16 h-16 bg-red-500/10 text-red-500 rounded-full flex items-center justify-center text-3xl mx-auto mb-4 border border-red-500/20">
                    <i class="ri-user-unfollow-line"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-2">Remove Follower?</h3>
                <p class="text-slate-400 text-sm leading-relaxed">
                    Are you sure you want to remove <strong id="modalUserName" class="text-white">User</strong>? <br>
                    They won't be notified, but they won't see your private posts anymore.
                </p>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <button onclick="closeRemoveModal()" class="bg-slate-800 hover:bg-slate-700 text-white py-3 rounded-xl font-bold transition border border-slate-700">
                    Cancel
                </button>
                <button onclick="confirmRemove()" class="bg-red-600 hover:bg-red-500 text-white py-3 rounded-xl font-bold transition shadow-lg shadow-red-900/20">
                    Yes, Remove
                </button>
            </div>
        </div>
    </div>

    <script>
        // --- 1. REMOVE FOLLOWER LOGIC ---
        let followerIdToRemove = null;

        function openRemoveModal(id, name) {
            followerIdToRemove = id;
            document.getElementById('modalUserName').innerText = name;
            document.getElementById('removeModal').classList.remove('hidden');
        }

        function closeRemoveModal() {
            followerIdToRemove = null;
            document.getElementById('removeModal').classList.add('hidden');
        }

        async function confirmRemove() {
            if (!followerIdToRemove) return;

            const btn = event.target;
            const originalText = btn.innerText;
            btn.innerText = "Removing...";
            btn.disabled = true;

            try {
                const res = await fetch(`/remove-follower/${followerIdToRemove}`);
                const data = await res.json();
                
                if (data.success) {
                    const card = document.getElementById(`user-card-${followerIdToRemove}`);
                    if(card) {
                        card.style.transition = 'all 0.3s ease';
                        card.style.opacity = '0';
                        card.style.transform = 'translateX(20px)';
                        setTimeout(() => card.remove(), 300);
                    }
                    closeRemoveModal();
                } else {
                    alert("Something went wrong!");
                }
            } catch (err) { 
                console.error(err); 
            } finally {
                btn.innerText = originalText;
                btn.disabled = false;
            }
        }

        // --- 2. TOGGLE FOLLOW LOGIC (ADDED MISSING SCRIPT) ---
        async function toggleFollowInList(btn, userId) {
            if(window.event) {
                window.event.preventDefault();
                window.event.stopPropagation();
            }

            try {
                const res = await fetch(`/follow/${userId}`);
                const data = await res.json();
                
                if(data.success) {
                    if(data.isFollowing) {
                        btn.innerText = 'Unfollow';
                        btn.className = 'bg-slate-800 text-slate-300 border border-slate-700 px-4 py-1.5 rounded-lg text-xs font-bold transition shadow-lg';
                    } else {
                        btn.innerText = 'Follow';
                        btn.className = 'bg-blue-600 text-white border border-blue-600 px-4 py-1.5 rounded-lg text-xs font-bold transition shadow-lg';
                    }
                } else if(data.error === "Login required") {
                    window.location.href = "/login";
                }
            } catch(err) { console.error(err); }
        }

        // Close modal on outside click
        document.getElementById('removeModal').addEventListener('click', (e) => {
            if (e.target === document.getElementById('removeModal')) closeRemoveModal();
        });
    </script>
</body>
</html>